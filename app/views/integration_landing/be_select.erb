  <body>


    <!-- Main jumbotron for a primary marketing message or call to action -->
    <div class="jumbotron">
      <div class="container">
        <img src="images/logos.png">
        <h1>Attract Patients.<br>Accelerate Productivity.</h1>
      </div>
    </div>

    <div class="container">
      <!-- Example row of columns -->
      <div class="row">
        <div class="col-md-8">
          <% if params[:zocdoc] %>
          <h2>Request Integration with ZocDoc</h2>
          <p>Please select the practice you would like to connect to ZocDoc to the right. Note: if you would like to integrate multiple practices, you will need to go through this request process for each practice individually.</p>
          <% else %>
          <h2>Learn More About ZocDoc</h2>
          <p>Please select your practice to the right. Once you submit, we'll forward your request to ZocDoc.</p>
          <% end %>
        </div>
        <div class="col-md-4 side-form">
          <h3>Select Practice</h3>
          <!-- <div class="form&#45;wrap"> -->
          <form class="form-wrap" action="/zocdoc/finish" method="post">
              <div class="form-group">
                  <label for="select-practice">Choose which Practice:</label>
                  <select class="form-control" id="select-practice" name="practice_id">
                    <!-- <option name="" value="">&#45; select a practice &#45;</option> -->
                    <% @entities.each do |acc| %>
                    <option value="<%= acc['id'] %>"><%= acc['name_alias'] %></option>
                    <% end %>
                  </select>
                </div>
                <!-- <p><a class="btn btn&#45;custom" href="#" role="button">Continue</a></p> -->
                <p><input type="submit" value="Continue" class="btn btn-custom" href="#" role="button"></a></p>
          <input type="hidden" name="user_email" value=<%= params[:user_email] %>>
          <input type="hidden" name="token" value=<%= @token %>>
          <% if params[:zocdoc] %>
          <input type="hidden" name="zocdoc" value=<%= params[:zocdoc] %>>
          <% end %>
          <!-- </div> -->
          </form>
       </div>
      </div>
		<div class="row">
        	<!-- <div class="col&#45;md&#45;12 panel panel&#45;default"> -->
          <!--   	<p>Note: If you are an existing ZocDoc client, but not a current CareCloud client, please submit the form on the <a href="">previous page</a></p> -->
          <!--   </div> -->
        </div>
      <hr>

      <footer>
        <p>Copyright Â© 2015 CareCloud Corporation. All rights reserved.<br><a href="http://www.carecloud.com/privacy-policy/" target="_blank">Privacy Policy</a></p>
      </footer>
    </div> <!-- /container -->


